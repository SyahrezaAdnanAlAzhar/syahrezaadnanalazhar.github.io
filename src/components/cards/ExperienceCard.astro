---
interface Props {
  title: string;
  company: string;
  location: string;
  startDate: string;
  endDate?: string;
  image: string;
  techStack: string[];
  isRemote?: boolean;
  class?: string;
}

const { 
  title, 
  company, 
  location, 
  startDate, 
  endDate, 
  image, 
  techStack,
  isRemote = false,
  class: className = ''
} = Astro.props;

const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base : `${base}/`;
---

<div class={`experience-card-wrapper ${className}`}>
  <div class="experience-card" data-hover-card>
    <div class="card-gradient-overlay"></div>
    <div class="card-content">
      <!-- Header: Logo + Title/Company -->
      <div class="card-header">
        <div class="logo-container">
          <img 
            src={`${baseUrl}${image}`} 
            alt={`${company} logo`}
            class="company-logo"
            loading="lazy"
          />
        </div>
        <div class="header-text">
          <h3 class="job-title font-heading">
            {title}
          </h3>
          <p class="company-name">
            {company}
          </p>
        </div>
      </div>

      <!-- Location -->
      <div class="meta-item">
        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span>{location}</span>
        {isRemote && <span class="remote-badge">(Remote)</span>}
      </div>

      <!-- Date -->
      <div class="meta-item">
        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <span>{startDate} - {endDate || 'Present'}</span>
      </div>

      <!-- Tech Stack -->
      {techStack && techStack.length > 0 && (
        <div class="tech-stack">
          {techStack.slice(0, 4).map(tech => (
            <span class="tech-badge">
              {tech}
            </span>
          ))}
          {techStack.length > 4 && (
            <span class="tech-badge tech-badge-more">
              +{techStack.length - 4}
            </span>
          )}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .experience-card-wrapper {
    /* SVG filter for rounded corners on clip-path */
    filter: url('#rounded-corners');
    flex-shrink: 0;
  }

  .experience-card {
    /* Diagonal corners snipped shape using clip-path */
    clip-path: polygon(
      16px 0,
      calc(100% - 0px) 0,
      100% 16px,
      100% calc(100% - 16px),
      calc(100% - 16px) 100%,
      0px 100%,
      0 calc(100% - 0px),
      0 16px
    );
    background-color: var(--color-primary);
    padding: 1rem;
    transition: background-color 0.3s ease;
    width: 260px;
    height: auto;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
  }

  .card-gradient-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background: transparent;
    --gradient-size: 0px;
    --gradient-x: 50%;
    --gradient-y: 50%;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    position: relative;
    z-index: 2;
  }

  .card-header {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .logo-container {
    flex-shrink: 0;
  }

  .company-logo {
    width: 2.75rem;
    height: 2.75rem;
    object-fit: contain;
    background: white;
    border-radius: 0.375rem;
    padding: 0.2rem;
  }

  .header-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    flex: 1;
    min-width: 0;
  }

  .job-title {
    font-size: 0.875rem;
    font-weight: 700;
    color: #000000;
    line-height: 1.25;
  }

  .company-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(0, 0, 0, 0.85);
    line-height: 1.3;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    color: rgba(0, 0, 0, 0.7);
  }

  .meta-icon {
    width: 0.875rem;
    height: 0.875rem;
    flex-shrink: 0;
  }

  .remote-badge {
    color: #cc4400;
    font-weight: 700;
    margin-left: 0.25rem;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.25rem;
  }

  .tech-badge {
    padding: 0.25rem 0.5rem;
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--color-primary);
    background-color: #000000;
    border-radius: 9999px;
  }

  .tech-badge-more {
    background-color: rgba(0, 0, 0, 0.6);
    color: var(--color-primary);
  }

  /* Tablet */
  @media (min-width: 640px) {
    .experience-card {
      clip-path: polygon(
        20px 0,
        calc(100% - 0px) 0,
        100% 20px,
        100% calc(100% - 20px),
        calc(100% - 20px) 100%,
        0px 100%,
        0 calc(100% - 0px),
        0 20px
      );
      width: 320px;
      padding: 1.25rem;
    }

    .card-header {
      gap: 0.875rem;
    }

    .company-logo {
      width: 3.5rem;
      height: 3.5rem;
      padding: 0.25rem;
    }

    .job-title {
      font-size: 1rem;
    }

    .company-name {
      font-size: 0.8125rem;
    }

    .meta-item {
      font-size: 0.75rem;
    }

    .tech-badge {
      font-size: 0.6875rem;
      padding: 0.3rem 0.625rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .experience-card {
      clip-path: polygon(
        24px 0,
        calc(100% - 0px) 0,
        100% 24px,
        100% calc(100% - 24px),
        calc(100% - 24px) 100%,
        0px 100%,
        0 calc(100% - 0px),
        0 24px
      );
      width: 380px;
      padding: 1.5rem;
    }

    .card-header {
      gap: 1rem;
    }

    .company-logo {
      width: 4rem;
      height: 4rem;
    }

    .job-title {
      font-size: 1.125rem;
    }

    .company-name {
      font-size: 0.875rem;
    }

    .meta-item {
      font-size: 0.8125rem;
      gap: 0.5rem;
    }

    .meta-icon {
      width: 1rem;
      height: 1rem;
    }

    .tech-badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.75rem;
    }

    .tech-stack {
      gap: 0.5rem;
    }
  }
</style>

<script>
  // ---- Event-delegated hover effect for ExperienceCards ----
  // Per-card state stored in a WeakMap; delegated listeners added once.

  interface CardHoverState {
    animationId: number | null;
    currentSize: number;
    targetSize: number;
    gradientX: number;
    gradientY: number;
    isHovering: boolean;
    overlay: HTMLElement;
  }

  const cardStateMap = new WeakMap<HTMLElement, CardHoverState>();

  function getOrCreateCardState(card: HTMLElement): CardHoverState | null {
    let state = cardStateMap.get(card);
    if (!state) {
      const overlay = card.querySelector('.card-gradient-overlay') as HTMLElement;
      if (!overlay) return null;
      state = {
        animationId: null,
        currentSize: 0,
        targetSize: 0,
        gradientX: 0,
        gradientY: 0,
        isHovering: false,
        overlay,
      };
      cardStateMap.set(card, state);
    }
    return state;
  }

  function getCardMaxSize(card: HTMLElement): number {
    const rect = card.getBoundingClientRect();
    return Math.sqrt(rect.width * rect.width + rect.height * rect.height) * 1.5;
  }

  function animateCardGradient(card: HTMLElement) {
    const state = cardStateMap.get(card);
    if (!state) return;
    const speed = 0.08;
    const diff = state.targetSize - state.currentSize;

    if (Math.abs(diff) > 1) {
      state.currentSize += diff * speed;
      updateCardOverlay(state);
      state.animationId = requestAnimationFrame(() => animateCardGradient(card));
    } else {
      state.currentSize = state.targetSize;
      updateCardOverlay(state);
      state.animationId = null;

      if (state.currentSize <= 0) {
        state.overlay.style.background = 'transparent';
      }
    }
  }

  function updateCardOverlay(state: CardHoverState) {
    if (state.currentSize > 0) {
      state.overlay.style.background =
        `radial-gradient(circle ${state.currentSize}px at ${state.gradientX}px ${state.gradientY}px, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 1) 70%, rgba(255, 255, 255, 0) 100%)`;
    }
  }

  function cardStartExpand(card: HTMLElement, x: number, y: number) {
    const state = getOrCreateCardState(card);
    if (!state) return;
    const rect = card.getBoundingClientRect();
    state.gradientX = x - rect.left;
    state.gradientY = y - rect.top;
    state.targetSize = getCardMaxSize(card);
    state.isHovering = true;
    if (!state.animationId) {
      state.animationId = requestAnimationFrame(() => animateCardGradient(card));
    }
  }

  function cardStartContract(card: HTMLElement) {
    const state = cardStateMap.get(card);
    if (!state) return;
    state.targetSize = 0;
    state.isHovering = false;
    if (!state.animationId) {
      state.animationId = requestAnimationFrame(() => animateCardGradient(card));
    }
  }

  // --- Delegated listeners: added ONCE, never re-added ---
  let hoverDelegationInit = false;

  function initCardHoverDelegation() {
    if (hoverDelegationInit) return;
    hoverDelegationInit = true;

    let currentHoveredCard: HTMLElement | null = null;

    // mouseover/mouseout bubble, so event delegation works
    document.addEventListener('mouseover', (e) => {
      const card = (e.target as HTMLElement).closest('[data-hover-card]') as HTMLElement | null;
      if (card && card !== currentHoveredCard) {
        currentHoveredCard = card;
        cardStartExpand(card, e.clientX, e.clientY);
      }
    });

    document.addEventListener('mouseout', (e) => {
      if (!currentHoveredCard) return;
      const related = (e as MouseEvent).relatedTarget as HTMLElement | null;
      if (!related || !currentHoveredCard.contains(related)) {
        cardStartContract(currentHoveredCard);
        currentHoveredCard = null;
      }
    });

    // Touch events bubble by default
    document.addEventListener('touchstart', (e) => {
      const card = (e.target as HTMLElement).closest('[data-hover-card]') as HTMLElement | null;
      if (!card) return;
      const touch = e.touches[0];
      cardStartExpand(card, touch.clientX, touch.clientY);
    }, { passive: true });

    document.addEventListener('touchend', (e) => {
      const card = (e.target as HTMLElement).closest('[data-hover-card]') as HTMLElement | null;
      if (card) cardStartContract(card);
    }, { passive: true });

    document.addEventListener('touchcancel', (e) => {
      const card = (e.target as HTMLElement).closest('[data-hover-card]') as HTMLElement | null;
      if (card) cardStartContract(card);
    }, { passive: true });
  }

  // Initialize delegation once (guard prevents stacking)
  initCardHoverDelegation();
  document.addEventListener('astro:page-load', initCardHoverDelegation);
</script>
