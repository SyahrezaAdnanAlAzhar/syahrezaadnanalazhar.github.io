---
interface Props {
  title: string;
  company: string;
  location: string;
  startDate: string;
  endDate?: string;
  image: string;
  techStack: string[];
  isRemote?: boolean;
  class?: string;
}

const { 
  title, 
  company, 
  location, 
  startDate, 
  endDate, 
  image, 
  techStack,
  isRemote = false,
  class: className = ''
} = Astro.props;

const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base : `${base}/`;
---

<div class={`experience-card-wrapper ${className}`}>
  <div class="experience-card" data-hover-card>
    <div class="card-gradient-overlay"></div>
    <div class="card-content">
      <!-- Header: Logo + Title/Company -->
      <div class="card-header">
        <div class="logo-container">
          <img 
            src={`${baseUrl}${image}`} 
            alt={`${company} logo`}
            class="company-logo"
            loading="lazy"
          />
        </div>
        <div class="header-text">
          <h3 class="job-title font-heading">
            {title}
          </h3>
          <p class="company-name">
            {company}
          </p>
        </div>
      </div>

      <!-- Location -->
      <div class="meta-item">
        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span>{location}</span>
        {isRemote && <span class="remote-badge">(Remote)</span>}
      </div>

      <!-- Date -->
      <div class="meta-item">
        <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <span>{startDate} - {endDate || 'Present'}</span>
      </div>

      <!-- Tech Stack -->
      {techStack && techStack.length > 0 && (
        <div class="tech-stack">
          {techStack.slice(0, 4).map(tech => (
            <span class="tech-badge">
              {tech}
            </span>
          ))}
          {techStack.length > 4 && (
            <span class="tech-badge tech-badge-more">
              +{techStack.length - 4}
            </span>
          )}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .experience-card-wrapper {
    /* SVG filter for rounded corners on clip-path */
    filter: url('#rounded-corners');
    flex-shrink: 0;
  }

  .experience-card {
    /* Diagonal corners snipped shape using clip-path */
    clip-path: polygon(
      16px 0,
      calc(100% - 0px) 0,
      100% 16px,
      100% calc(100% - 16px),
      calc(100% - 16px) 100%,
      0px 100%,
      0 calc(100% - 0px),
      0 16px
    );
    background-color: var(--color-primary);
    padding: 1rem;
    transition: background-color 0.3s ease;
    width: 260px;
    height: auto;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
  }

  .card-gradient-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    background: transparent;
    --gradient-size: 0px;
    --gradient-x: 50%;
    --gradient-y: 50%;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    position: relative;
    z-index: 2;
  }

  .card-header {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .logo-container {
    flex-shrink: 0;
  }

  .company-logo {
    width: 2.75rem;
    height: 2.75rem;
    object-fit: contain;
    background: white;
    border-radius: 0.375rem;
    padding: 0.2rem;
  }

  .header-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    flex: 1;
    min-width: 0;
  }

  .job-title {
    font-size: 0.875rem;
    font-weight: 700;
    color: #000000;
    line-height: 1.25;
  }

  .company-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(0, 0, 0, 0.85);
    line-height: 1.3;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    color: rgba(0, 0, 0, 0.7);
  }

  .meta-icon {
    width: 0.875rem;
    height: 0.875rem;
    flex-shrink: 0;
  }

  .remote-badge {
    color: #cc4400;
    font-weight: 700;
    margin-left: 0.25rem;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.25rem;
  }

  .tech-badge {
    padding: 0.25rem 0.5rem;
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--color-primary);
    background-color: #000000;
    border-radius: 9999px;
  }

  .tech-badge-more {
    background-color: rgba(0, 0, 0, 0.6);
    color: var(--color-primary);
  }

  /* Tablet */
  @media (min-width: 640px) {
    .experience-card {
      clip-path: polygon(
        20px 0,
        calc(100% - 0px) 0,
        100% 20px,
        100% calc(100% - 20px),
        calc(100% - 20px) 100%,
        0px 100%,
        0 calc(100% - 0px),
        0 20px
      );
      width: 320px;
      padding: 1.25rem;
    }

    .card-header {
      gap: 0.875rem;
    }

    .company-logo {
      width: 3.5rem;
      height: 3.5rem;
      padding: 0.25rem;
    }

    .job-title {
      font-size: 1rem;
    }

    .company-name {
      font-size: 0.8125rem;
    }

    .meta-item {
      font-size: 0.75rem;
    }

    .tech-badge {
      font-size: 0.6875rem;
      padding: 0.3rem 0.625rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .experience-card {
      clip-path: polygon(
        24px 0,
        calc(100% - 0px) 0,
        100% 24px,
        100% calc(100% - 24px),
        calc(100% - 24px) 100%,
        0px 100%,
        0 calc(100% - 0px),
        0 24px
      );
      width: 380px;
      padding: 1.5rem;
    }

    .card-header {
      gap: 1rem;
    }

    .company-logo {
      width: 4rem;
      height: 4rem;
    }

    .job-title {
      font-size: 1.125rem;
    }

    .company-name {
      font-size: 0.875rem;
    }

    .meta-item {
      font-size: 0.8125rem;
      gap: 0.5rem;
    }

    .meta-icon {
      width: 1rem;
      height: 1rem;
    }

    .tech-badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.75rem;
    }

    .tech-stack {
      gap: 0.5rem;
    }
  }
</style>

<script>
  function initCardHoverEffect() {
    const cards = document.querySelectorAll('[data-hover-card]');
    
    cards.forEach(cardEl => {
      const card = cardEl as HTMLElement;
      const overlay = card.querySelector('.card-gradient-overlay') as HTMLElement;
      if (!overlay) return;

      let animationId: number | null = null;
      let currentSize = 0;
      let targetSize = 0;
      let gradientX = 0;
      let gradientY = 0;
      let isHovering = false;

      // Calculate max size needed to cover entire card from any point
      function getMaxSize(): number {
        const rect = card.getBoundingClientRect();
        // Diagonal of the card ensures full coverage from any corner
        return Math.sqrt(rect.width * rect.width + rect.height * rect.height) * 1.5;
      }

      // Animate the gradient expansion/contraction
      function animateGradient() {
        const speed = 0.08; // Adjust for faster/slower animation
        const diff = targetSize - currentSize;
        
        if (Math.abs(diff) > 1) {
          currentSize += diff * speed;
          updateOverlay();
          animationId = requestAnimationFrame(animateGradient);
        } else {
          currentSize = targetSize;
          updateOverlay();
          animationId = null;
          
          // If fully contracted, hide the gradient
          if (currentSize <= 0) {
            overlay.style.background = 'transparent';
          }
        }
      }

      function updateOverlay() {
        if (currentSize > 0) {
          overlay.style.background = `radial-gradient(circle ${currentSize}px at ${gradientX}px ${gradientY}px, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 1) 70%, rgba(255, 255, 255, 0) 100%)`;
        }
      }

      function startExpand(x: number, y: number) {
        const rect = card.getBoundingClientRect();
        gradientX = x - rect.left;
        gradientY = y - rect.top;
        targetSize = getMaxSize();
        isHovering = true;
        
        if (!animationId) {
          animationId = requestAnimationFrame(animateGradient);
        }
      }

      function startContract() {
        targetSize = 0;
        isHovering = false;
        
        if (!animationId) {
          animationId = requestAnimationFrame(animateGradient);
        }
      }

      // Mouse events
      card.addEventListener('mouseenter', (e: MouseEvent) => {
        startExpand(e.clientX, e.clientY);
      });

      card.addEventListener('mouseleave', () => {
        startContract();
      });

      // Touch events
      card.addEventListener('touchstart', (e: TouchEvent) => {
        const touch = e.touches[0];
        startExpand(touch.clientX, touch.clientY);
      }, { passive: true });

      card.addEventListener('touchend', () => {
        startContract();
      }, { passive: true });

      card.addEventListener('touchcancel', () => {
        startContract();
      }, { passive: true });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCardHoverEffect);
  } else {
    initCardHoverEffect();
  }

  // Re-initialize on Astro navigation
  document.addEventListener('astro:page-load', initCardHoverEffect);
</script>
