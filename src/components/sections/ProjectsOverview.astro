---
import { getCollection } from 'astro:content';
import SectionHeading from '../ui/SectionHeading.astro';
import OptimizedImage from '../ui/OptimizedImage.astro';
import { THEME_COLORS } from '../../constants/theme';

const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base : `${base}/`;

// Get all projects
const allProjects = await getCollection('projects');

// Separate and sort by projectType
const softwareProjects = allProjects
  .filter(p => p.data.projectType === 'software')
  .sort((a, b) => a.data.order - b.data.order);

const aiProjects = allProjects
  .filter(p => p.data.projectType === 'ai')
  .sort((a, b) => a.data.order - b.data.order);
---

<section id="projects" class="projects-section">
  <div class="projects-container">
    <!-- Top Spacer -->
    <div class="section-spacer-top"></div>
    
    <SectionHeading 
      title="Projects"
      showDetailButton={false}
    />

    <!-- Software Projects Section -->
    <div class="subsection">
      <h3 class="subsection-heading">Software Projects</h3>
      <div class="projects-grid">
        {softwareProjects.map((project) => (
          <a 
            href={`${baseUrl}projects/${project.slug}`}
            class="project-card"
            style={`
              background-color: ${THEME_COLORS.amber.light};
              border-color: ${THEME_COLORS.amber.border};
            `}
            data-project-type="software"
            data-project-slug={project.slug}
          >
            <!-- Image Container -->
            <div class="card-image-container">
              <OptimizedImage 
                src={project.data.image}
                alt={project.data.title}
                class="card-image"
                width={800}
                height={600}
              />
              <div class="image-overlay">
                <span class="see-detail-badge">See Detail</span>
              </div>
            </div>

            <!-- Content -->
            <div class="card-content">
              <!-- Title and Category Row -->
              <div class="title-category-row">
                <h4 class="card-title">{project.data.title}</h4>
                <span class="category-badge">{project.data.category}</span>
              </div>

              <!-- Description -->
              <p class="card-description">{project.data.description}</p>

              <!-- Tech Stack Badges -->
              {project.data.techStack && project.data.techStack.length > 0 && (
                <div class="tech-badges">
                  {project.data.techStack.map((tech) => (
                    <span class="tech-badge">
                      {tech}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- AI Projects Section -->
    <div class="subsection">
      <h3 class="subsection-heading">AI Projects</h3>
      <div class="projects-grid">
        {aiProjects.map((project) => (
          <a 
            href={`${baseUrl}projects/${project.slug}`}
            class="project-card"
            style={`
              background-color: ${THEME_COLORS.cyan.light};
              border-color: ${THEME_COLORS.cyan.border};
            `}
            data-project-type="ai"
            data-project-slug={project.slug}
          >
            <!-- Image Container -->
            <div class="card-image-container">
              <OptimizedImage 
                src={project.data.image}
                alt={project.data.title}
                class="card-image"
                width={800}
                height={600}
              />
              <div class="image-overlay">
                <span class="see-detail-badge">See Detail</span>
              </div>
            </div>

            <!-- Content -->
            <div class="card-content">
              <!-- Title and Category Row -->
              <div class="title-category-row">
                <h4 class="card-title">{project.data.title}</h4>
                <span class="category-badge">{project.data.category}</span>
              </div>

              <!-- Description -->
              <p class="card-description">{project.data.description}</p>

              <!-- Tech Stack Badges -->
              {project.data.techStack && project.data.techStack.length > 0 && (
                <div class="tech-badges">
                  {project.data.techStack.map((tech) => (
                    <span class="tech-badge">
                      {tech}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>

  </div>
</section>

<style>
  .projects-section {
    width: 100%;
    overflow: hidden;
  }

  .projects-container {
    max-width: 72rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Spacers */
  .section-spacer-top {
    height: 6rem;
  }

  /* Subsection */
  .subsection {
    margin-top: 3rem;
  }

  .subsection-heading {
    font-family: 'Quantico', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #000000;
    margin-bottom: 1.5rem;
  }

  /* Projects Grid - 2 columns desktop, 1 column mobile */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    align-items: start;
  }

  /* Project Card */
  .project-card {
    display: flex;
    flex-direction: column;
    border: 2px solid;
    border-radius: 1rem;
    overflow: hidden;
    text-decoration: none;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
  }

  /* Image Container */
  .card-image-container {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1rem 1rem 0 0;
    transition: filter 0.3s ease;
  }

  /* Image Overlay - Hidden by default */
  .image-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 1rem 1rem 0 0;
  }

  .project-card:hover .image-overlay {
    opacity: 1;
  }

  .see-detail-badge {
    padding: 0.625rem 1.25rem;
    border-radius: 9999px;
    color: #ffffff;
    font-size: 0.875rem;
    font-weight: 600;
  }
  
  .project-card[data-project-type="software"] .see-detail-badge {
    background-color: #f59e0b; /* amber */
  }
  
  .project-card[data-project-type="ai"] .see-detail-badge {
    background-color: #06b6d4; /* cyan */
  }

  /* Card Content */
  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* Title and Category Row */
  .title-category-row {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .card-title {
    flex: 1;
    min-width: 0;
    font-family: 'Quantico', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    color: #000000;
    line-height: 1.3;
  }

  .category-badge {
    flex-shrink: 0;
    padding: 0.25rem 0.75rem;
    background-color: #ffffff;
    color: #000000;
    font-size: 0.75rem;
    font-weight: 600;
    border: 2px solid;
    border-radius: 9999px;
    white-space: nowrap;
  }
  
  .project-card[data-project-type="software"] .category-badge {
    border-color: #f59e0b; /* amber */
  }
  
  .project-card[data-project-type="ai"] .category-badge {
    border-color: #06b6d4; /* cyan */
  }

  /* Description */
  .card-description {
    color: #000000;
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.6;
  }

  /* Tech Badges */
  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  .tech-badge {
    padding: 0.375rem 0.75rem;
    border: 2px solid;
    border-radius: 9999px;
    color: #000000;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }
  
  .project-card[data-project-type="software"] .tech-badge {
    border-color: #f59e0b; /* amber */
    background-color: #fef3c7; /* light amber */
  }
  
  .project-card[data-project-type="ai"] .tech-badge {
    border-color: #06b6d4; /* cyan */
    background-color: #cffafe; /* light cyan */
  }

  /* ==================
     RESPONSIVE STYLES
     ================== */

  /* Tablet */
  @media (min-width: 640px) {
    .projects-container {
      padding: 0 2rem;
    }

    .section-spacer-top {
      height: 8rem;
    }

    .subsection-heading {
      font-size: 1.75rem;
    }

    .card-content {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .card-description {
      font-size: 0.9375rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .projects-container {
      padding: 0 3rem;
    }

    .section-spacer-top {
      height: 10rem;
    }

    .projects-grid {
      gap: 2rem;
    }

    .subsection {
      margin-top: 4rem;
    }

    .subsection-heading {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .card-content {
      padding: 1.75rem;
      gap: 1rem;
    }

    .card-title {
      font-size: 1.375rem;
    }

    .tech-badges {
      gap: 0.625rem;
    }
  }

  /* Mobile - Single Column */
  @media (max-width: 639px) {
    .projects-container {
      padding: 0 1rem;
    }

    .section-spacer-top {
      height: 4rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .subsection {
      margin-top: 2rem;
    }

    .subsection-heading {
      font-size: 1.25rem;
      margin-bottom: 1rem;
    }

    .card-content {
      padding: 1rem;
      gap: 0.625rem;
    }

    .title-category-row {
      flex-direction: column;
      gap: 0.5rem;
    }

    .card-title {
      font-size: 1rem;
    }

    .category-badge {
      align-self: flex-start;
    }

    .card-description {
      font-size: 0.8125rem;
    }

    .tech-badges {
      gap: 0.375rem;
    }

    .tech-badge {
      padding: 0.25rem 0.625rem;
      font-size: 0.6875rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  function initProjectsAnimations() {
    const cards = document.querySelectorAll('.project-card');
    
    cards.forEach((card, cardIndex) => {
      // Set initial state
      gsap.set(card, { opacity: 0, y: 30 });
      
      // Card entrance animation
      gsap.to(card, {
        scrollTrigger: {
          trigger: card,
          start: 'top 85%',
          toggleActions: 'play none none none'
        },
        opacity: 1,
        y: 0,
        duration: 0.5,
        delay: cardIndex * 0.1,
        ease: 'power2.out'
      });
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initProjectsAnimations);
  } else {
    initProjectsAnimations();
  }

  document.addEventListener('astro:page-load', initProjectsAnimations);
</script>
