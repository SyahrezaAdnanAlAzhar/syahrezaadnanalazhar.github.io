<!-- Project Detail Modal -->
<div id="project-modal-backdrop" class="modal-backdrop" aria-hidden="true">
  <div id="project-modal" class="modal-container" role="dialog" aria-modal="true" aria-label="Project Details">
    <!-- Close Button — absolute, floats over content -->
    <button id="project-modal-close" class="modal-close-btn" aria-label="Close modal">
      &#x2715;
    </button>

    <!-- Scrollable Content Area -->
    <div id="project-modal-content" class="modal-content"></div>
  </div>
</div>

<style>
  .modal-backdrop {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    display: none;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .modal-backdrop.is-open {
    display: flex;
  }

  .modal-container {
    position: relative;
    max-width: 56rem;
    max-height: 85vh;
    width: 100%;
    background-color: #F5F2EB;
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .modal-close-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #ef4444;
    color: #ffffff;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    flex-shrink: 0;
  }

  .modal-close-btn:hover {
    transform: translate(-4px, -4px);
    box-shadow: 4px 4px 0 0 #000000;
  }

  .modal-close-btn:active {
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 0 0 #000000;
  }

  .modal-content {
    overflow-y: auto;
    flex: 1;
    padding-bottom: 2rem;
  }

  .modal-content::-webkit-scrollbar {
    width: 8px;
  }

  .modal-content::-webkit-scrollbar-track {
    background: #000000;
  }

  .modal-content::-webkit-scrollbar-thumb {
    background-color: #ffe61f;
    border-radius: 4px;
  }

  .modal-content::-webkit-scrollbar-thumb:hover {
    background-color: #ff991c;
  }

  .modal-content {
    scrollbar-width: thin;
    scrollbar-color: #ffe61f #000000;
  }

  .modal-content :global(.modal-loading) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 300px;
    gap: 1rem;
    color: #6b7280;
    font-weight: 500;
  }

  .modal-content :global(.modal-loading-spinner) {
    width: 2.5rem;
    height: 2.5rem;
    border: 3px solid #e5e7eb;
    border-top-color: #000000;
    border-radius: 50%;
    animation: modal-spin 0.8s linear infinite;
  }

  @keyframes modal-spin {
    to { transform: rotate(360deg); }
  }

  .modal-content :global(.modal-error) {
    text-align: center;
    padding: 3rem 2rem;
    color: #ef4444;
    font-weight: 500;
  }

  .modal-content :global(.project-detail-container) {
    padding-top: 1.5rem;
  }

  .modal-content :global(.cover-image-container) {
    margin-left: 0 !important;
    margin-right: 0 !important;
    border-radius: 1rem !important;
    border: 3px solid !important;
  }

  .modal-content :global(.project-detail-main) {
    padding-top: 0 !important;
    min-height: auto !important;
    padding-bottom: 0 !important;
  }

    /* Mobile */
  @media (max-width: 639px) {
    .modal-backdrop {
      padding: 0.5rem;
    }

    .modal-container {
      max-height: 90vh;
      border-radius: 0.75rem;
    }

    .modal-close-btn {
      top: 0.75rem;
      right: 0.75rem;
      width: 2.25rem;
      height: 2.25rem;
      font-size: 1rem;
    }

    .modal-content {
      padding-bottom: 1.5rem;
    }

    .modal-content :global(.cover-image-container) {
      border-radius: 0.75rem !important;
    }
  }

  /* Tablet */
  @media (min-width: 640px) and (max-width: 1023px) {
    .modal-backdrop {
      padding: 1.5rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  function initProjectModal() {
    const backdrop = document.getElementById('project-modal-backdrop') as HTMLElement | null;
    const modal = document.getElementById('project-modal') as HTMLElement | null;
    const closeBtn = document.getElementById('project-modal-close') as HTMLElement | null;
    const contentArea = document.getElementById('project-modal-content') as HTMLElement | null;

    if (!backdrop || !modal || !closeBtn || !contentArea) return;

    const _backdrop: HTMLElement = backdrop;
    const _modal: HTMLElement = modal;
    const _contentArea: HTMLElement = contentArea;

    let isOpen = false;
    let closingViaCode = false;
    let openedViaNavigation = false; // true when opened via card click (has history entry)

    const baseUrl = (import.meta.env.BASE_URL || '/').replace(/\/+$/, '') || '';
    const homePath = import.meta.env.BASE_URL || '/';

    const loadingHTML = `
      <div class="modal-loading">
        <div class="modal-loading-spinner"></div>
        <p>Loading project…</p>
      </div>
    `;

    function reinitModalScripts() {
      const sections = _contentArea.querySelectorAll('.section-wrapper');
      sections.forEach((section) => {
        const header = section.querySelector('.section-header');
        const defaultOpen = section.getAttribute('data-default-open') === 'true';

        if (!defaultOpen) {
          section.setAttribute('data-collapsed', 'true');
          header?.setAttribute('aria-expanded', 'false');
        }

        header?.addEventListener('click', () => {
          const isCollapsed = section.getAttribute('data-collapsed') === 'true';
          if (isCollapsed) {
            section.removeAttribute('data-collapsed');
            header.setAttribute('aria-expanded', 'true');
          } else {
            section.setAttribute('data-collapsed', 'true');
            header.setAttribute('aria-expanded', 'false');
          }
        });
      });

      const tables = _contentArea.querySelectorAll('.table-content table');
      tables.forEach((table) => {
        const headers: string[] = [];
        const headerCells = table.querySelectorAll('thead th');
        headerCells.forEach((th) => {
          headers.push(th.textContent?.trim() || '');
        });

        const rows = table.querySelectorAll('tbody tr');
        rows.forEach((row) => {
          const cells = row.querySelectorAll('td');
          cells.forEach((cell, index) => {
            if (headers[index]) {
              cell.setAttribute('data-label', headers[index] + ': ');
            }
          });
        });
      });
    }

    async function openModal(slug: string, addToHistory = true) {
      if (isOpen) return;
      isOpen = true;

      if (addToHistory) {
        history.pushState({ projectModal: slug }, '', `${homePath}#project/${slug}`);
        openedViaNavigation = true;
      } else {
        openedViaNavigation = false;
      }

      _contentArea.innerHTML = loadingHTML;
      _backdrop.classList.add('is-open');
      _backdrop.setAttribute('aria-hidden', 'false');

      document.body.style.overflow = 'hidden';

      gsap.fromTo(_backdrop, { opacity: 0 }, { opacity: 1, duration: 0.3, ease: 'power2.out' });
      gsap.fromTo(_modal, { scale: 0.95, opacity: 0 }, { scale: 1, opacity: 1, duration: 0.3, ease: 'power2.out' });

      try {
        const res = await fetch(`${baseUrl}/projects/${slug}/`);
        if (!res.ok) throw new Error(`HTTP ${res.status}`);

        const html = await res.text();
        const doc = new DOMParser().parseFromString(html, 'text/html');

        const styles = Array.from(doc.querySelectorAll('head style'))
          .map(s => s.outerHTML)
          .join('');

        const container = doc.querySelector('.project-detail-container');

        if (container) {
          _contentArea.innerHTML = styles + container.outerHTML;
          reinitModalScripts();
        } else {
          _contentArea.innerHTML = '<p class="modal-error">Content not found.</p>';
        }

        _contentArea.scrollTop = 0;
      } catch {
        _contentArea.innerHTML = '<p class="modal-error">Failed to load project content.</p>';
      }
    }

    function closeModal(triggeredByPopstate = false) {
      if (!isOpen) return;
      isOpen = false;

      gsap.to(_modal, { scale: 0.95, opacity: 0, duration: 0.25, ease: 'power2.in' });
      gsap.to(_backdrop, {
        opacity: 0,
        duration: 0.25,
        ease: 'power2.in',
        onComplete: () => {
          _backdrop.classList.remove('is-open');
          _backdrop.setAttribute('aria-hidden', 'true');
          _contentArea.innerHTML = '';
          document.body.style.overflow = '';
        },
      });

      if (!triggeredByPopstate) {
        if (openedViaNavigation) {
          closingViaCode = true;
          history.back();
        } else {
          history.replaceState(null, '', homePath);
        }
      }
    }

    closeBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      closeModal();
    });

    _backdrop.addEventListener('click', (e) => {
      if (e.target === _backdrop) closeModal();
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) closeModal();
    });

    window.addEventListener('popstate', () => {
      if (closingViaCode) {
        closingViaCode = false;
        return;
      }
      if (isOpen) closeModal(true);
    });

    document.querySelectorAll('.project-card[data-project-slug]').forEach(card => {
      card.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = (card as HTMLElement).dataset.projectSlug;
        if (slug) openModal(slug);
      });
    });

    const hashMatch = window.location.hash.match(/^#project\/(.+)$/);
    if (hashMatch) {
      const slug = hashMatch[1];
      openModal(slug, false);
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initProjectModal);
  } else {
    initProjectModal();
  }
  document.addEventListener('astro:page-load', initProjectModal);
</script>
