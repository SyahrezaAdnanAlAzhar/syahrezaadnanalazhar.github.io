---
interface Props {
  href: string;
  thumbnail: string;
  alt?: string;
  caption?: string;
  platform?: string;
  icon?: string;
}

const { href, thumbnail, alt = '', caption = '', platform = '', icon = '' } = Astro.props;
const base = import.meta.env.BASE_URL;
const thumbnailSrc = thumbnail.startsWith('/') && !thumbnail.startsWith(base) ? `${base}${thumbnail}` : thumbnail;
const iconSrc = icon && icon.startsWith('/') && !icon.startsWith(base) ? `${base}${icon}` : icon;
---

<a href={href} class="social-media-card" target="_blank" rel="noopener noreferrer">
  <!-- Thumbnail -->
  <div class="smc-thumbnail">
    <img src={thumbnailSrc} alt={alt || caption} loading="lazy" />
  </div>

  <!-- Info -->
  <div class="smc-info">
    {/* Platform row (icon + platform name) */}
    {platform && (
      <div class="smc-platform-row">
        {iconSrc && (
          <img src={iconSrc} alt={platform} class="smc-platform-icon" />
        )}
        <span class="smc-platform-name">{platform}</span>
      </div>
    )}

    {/* Caption */}
    {caption && (
      <p class="smc-caption">{caption}</p>
    )}
  </div>
</a>

<style>
  .social-media-card {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 0.75rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    margin: 1rem 0;
  }

  .social-media-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 4px 4px 0 0 #000000;
  }

  .social-media-card:active {
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 0 0 #000000;
  }

  .smc-thumbnail {
    flex-shrink: 0;
    width: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #f9fafb;
  }

  .smc-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .smc-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 1rem 1.25rem;
    gap: 0.375rem;
  }

  .smc-platform-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .smc-platform-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    object-fit: contain;
  }

  .smc-platform-name {
    font-weight: 600;
    font-size: 0.9375rem;
    color: #000000;
  }

  .smc-caption {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
    line-height: 1.4;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 639px) {
    .smc-thumbnail {
      width: 90px;
    }

    .smc-info {
      padding: 0.75rem 1rem;
    }

    .smc-platform-name {
      font-size: 0.875rem;
    }

    .smc-caption {
      font-size: 0.8125rem;
    }

    .smc-platform-icon {
      width: 18px;
      height: 18px;
    }
  }

  @media (min-width: 1024px) {
    .smc-thumbnail {
      width: 140px;
    }

    .smc-platform-name {
      font-size: 1rem;
    }

    .smc-caption {
      font-size: 0.9375rem;
    }
  }
</style>
