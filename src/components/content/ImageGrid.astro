---
interface Props {
  cols?: number;
}

const { cols = 2 } = Astro.props;
---

<div class="image-grid" style={`--cols: ${cols};`}>
  <slot />
</div>

<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat(var(--cols), 1fr);
    gap: 1.5rem;
    margin: 1.5rem 0;
  }

  /* Responsive - reduce columns on smaller screens */
  @media (max-width: 1023px) {
    .image-grid {
      grid-template-columns: repeat(min(var(--cols), 2), 1fr);
      gap: 1rem;
    }
  }

  @media (max-width: 639px) {
    .image-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
