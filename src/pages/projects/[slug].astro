---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/layout/Navbar.astro';
import OptimizedImage from '../../components/ui/OptimizedImage.astro';

// Get base URL for proper routing
const base = import.meta.env.BASE_URL;
const baseUrl = base.endsWith('/') ? base : `${base}/`;

// Generate static paths for all projects
export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// Color mapping for project types (amber for software, cyan for AI)
const colorMap = {
  software: {
    accent: '#f59e0b',
    accentLight: '#fef3c7',
    accentBorder: '#fbbf24',
  },
  ai: {
    accent: '#06b6d4',
    accentLight: '#cffafe',
    accentBorder: '#22d3ee',
  },
};

const colors = colorMap[project.data.projectType];
---

<Layout 
  title={`${project.data.title} | Syahreza Adnan`}
  description={project.data.description}
>
  <Navbar />
  
  <main class="project-detail-main">
    <div class="project-detail-container">
      <!-- Project Header -->
      <header class="project-header">
        <!-- Cover Image -->
        <div 
          class="cover-image-container"
          style={`border-color: ${colors.accentBorder};`}
        >
          <OptimizedImage 
            src={project.data.image}
            alt={project.data.title}
            class="cover-image"
            width={1200}
            height={600}
            loading="eager"
          />
        </div>

        <!-- LinkButtons will be rendered from MDX content here -->
        <!-- The Content component renders the MDX which includes LinkButtons -->

        <!-- Title and Meta -->
        <div class="project-meta">
          <h1 class="project-title">{project.data.title}</h1>
          
          <div class="meta-badges">
            <span 
              class="category-badge"
              style={`border-color: ${colors.accent};`}
            >
              {project.data.category}
            </span>

            <!-- Tech Stack Badges -->
            {project.data.techStack && project.data.techStack.length > 0 && (
              project.data.techStack.map((tech) => (
                <span 
                  class="tech-badge"
                  style={`background-color: ${colors.accentLight}; border-color: ${colors.accent};`}
                >
                  {tech}
                </span>
              ))
            )}
          </div>
        </div>
      </header>

      <!-- Divider -->
      <hr class="section-divider" />

      <!-- Project Content (from MDX) -->
      <article class="project-content">
        <Content />
      </article>
    </div>
  </main>
</Layout>

<style>
  .project-detail-main {
    min-height: 100vh;
    padding-top: 6rem;
    padding-bottom: 4rem;
  }

  .project-detail-container {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Project Header */
  .project-header {
    margin-bottom: 2rem;
  }

  .cover-image-container {
    aspect-ratio: 16 / 9;
    border-radius: 1rem;
    overflow: hidden;
    margin-bottom: 1.5rem;
    border: 3px solid;
  }

  .cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Meta */
  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-title {
    font-family: 'Quantico', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #000000;
    line-height: 1.2;
  }

  .meta-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .category-badge {
    padding: 0.375rem 0.875rem;
    background-color: #ffffff;
    color: #000000;
    font-size: 0.8125rem;
    font-weight: 600;
    border: 2px solid;
    border-radius: 9999px;
  }

  .tech-badge {
    padding: 0.375rem 0.75rem;
    border: 2px solid;
    border-radius: 9999px;
    color: #000000;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }

  /* Divider */
  .section-divider {
    border: none;
    height: 2px;
    background-color: #e5e7eb;
    margin: 2rem 0;
  }

  /* Project Content (MDX) */
  .project-content {
    color: #1f2937;
    line-height: 1.8;
    font-weight: 500;
  }

  /* Global styles for MDX rendered content */
  .project-content :global(.link-buttons-container) {
    margin-top: -0.5rem;
    margin-bottom: 1.5rem;
  }

  /* Custom lists */
  .project-content :global(.custom-list) {
    list-style-type: disc;
    margin: 1rem 0 1.25rem 0;
    padding-left: 1.75rem;
    color: #1f2937;
    font-weight: 500;
    font-size: 1rem;
    line-height: 1.75;
  }

  .project-content :global(.custom-list li) {
    margin-bottom: 0.75rem;
  }

  .project-content :global(.custom-list li:last-child) {
    margin-bottom: 0;
  }

  /* Responsive */
  @media (min-width: 640px) {
    .project-detail-container {
      padding: 0 2rem;
    }

    .project-title {
      font-size: 2.5rem;
    }

    .cover-image-container {
      margin-bottom: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .project-detail-container {
      padding: 0 3rem;
    }

    .project-detail-main {
      padding-top: 8rem;
    }

    .project-title {
      font-size: 2.75rem;
    }

    .section-divider {
      margin: 2.5rem 0;
    }
  }

  @media (max-width: 639px) {
    .project-detail-main {
      padding-top: 5rem;
    }

    .project-detail-container {
      padding: 0 1rem;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .cover-image-container {
      margin-left: -1rem;
      margin-right: -1rem;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }

    .meta-badges {
      gap: 0.375rem;
    }

    .category-badge {
      padding: 0.25rem 0.625rem;
      font-size: 0.75rem;
    }

    .tech-badge {
      padding: 0.25rem 0.625rem;
      font-size: 0.6875rem;
    }

    .section-divider {
      margin: 1.5rem 0;
    }
  }

</style>
