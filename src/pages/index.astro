---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Hero from '../components/sections/Hero.astro';
import ExperienceOverviewTimeline from '../components/sections/ExperienceOverviewTimeline.astro';
import TechStack from '../components/sections/TechStack.astro';
import ProjectsOverview from '../components/sections/ProjectsOverview.astro';
import AwardsOverview from '../components/sections/AwardsOverview.astro';
import ContactSection from '../components/sections/ContactSection.astro';
import ProjectModal from '../components/sections/ProjectModal.astro';
import AwardModal from '../components/sections/AwardModal.astro';
---

<Layout 
  title="Syahreza Adnan - AI Engineer & Full Stack Developer"
  description="Portfolio of Syahreza Adnan Al Azhar - AI Engineer and Full Stack Developer specializing in Machine Learning, Computer Vision, and Web Development."
>
  <!-- Dynamic Island Navbar -->
  <Navbar />
  
  <main>
    <!-- Hero Section -->
    <Hero />

    <!-- Experience Section -->
    <ExperienceOverviewTimeline />

    <!-- Tech Stack Section -->
    <TechStack />

    <!-- Projects Section -->
    <ProjectsOverview />

    <!-- Honors & Awards Section -->
    <AwardsOverview />

    <!-- Contact Section -->
    <ContactSection />
  </main>

  <!-- Project Detail Modal (rendered on home page) -->
  <ProjectModal />

  <!-- Award Detail Modal (rendered on home page) -->
  <AwardModal />
</Layout>