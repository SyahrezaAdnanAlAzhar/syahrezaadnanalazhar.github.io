---
import Layout from '../layouts/Layout.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="404 - Page Not Found">
  <main class="not-found-page">
    <div class="not-found-content">
      <!-- 404 Number -->
      <h1 class="not-found-code">404</h1>

      <!-- Message -->
      <h2 class="not-found-title">Page Not Found</h2>
      <p class="not-found-description">
        Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
      </p>

      <!-- Back to Home Button -->
      <a 
        href={`${base}`}
        class="back-home-btn"
      >
        Back to Home Page
      </a>
    </div>
  </main>
</Layout>

<style>
  .not-found-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .not-found-content {
    max-width: 32rem;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .not-found-code {
    font-family: 'Quantico', sans-serif;
    font-size: 10rem;
    font-weight: 700;
    color: #000000;
    line-height: 1;
    margin: 0;
  }

  .not-found-title {
    font-family: 'Quantico', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #000000;
    margin: 0;
  }

  .not-found-description {
    font-size: 1.125rem;
    color: #000000;
    max-width: 28rem;
    margin: 0;
    line-height: 1.6;
  }

  .back-home-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    padding: 0.75rem 1.5rem;
    background-color: #ffffff;
    color: #f97316;
    font-weight: 600;
    font-size: 1rem;
    border: 2px solid #f97316;
    border-radius: 64px;
    box-shadow: 4px 4px 0px 0px rgba(0, 0, 0, 1);
    text-decoration: none;
    cursor: pointer;
    will-change: transform, background-color, color, border-color, border-radius;
    transition: transform 300ms cubic-bezier(0.4, 0, 0.2, 1),
                background-color 200ms cubic-bezier(0.4, 0, 0.2, 1),
                color 200ms cubic-bezier(0.4, 0, 0.2, 1),
                border-color 200ms cubic-bezier(0.4, 0, 0.2, 1),
                border-radius 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .back-home-btn:hover {
    background-color: #f97316;
    color: #ffffff;
    border-color: #f97316;
    transform: scale(1.03);
    border-radius: 1rem;
  }

  @media (max-width: 639px) {
    .not-found-code {
      font-size: 6rem;
    }

    .not-found-title {
      font-size: 1.5rem;
    }

    .not-found-description {
      font-size: 1rem;
    }

    .back-home-btn {
      padding: 0.625rem 1.25rem;
      font-size: 0.875rem;
      box-shadow: 3px 3px 0px 0px rgba(0, 0, 0, 1);
    }
  }

  @media (min-width: 1024px) {
    .not-found-code {
      font-size: 12rem;
    }

    .not-found-title {
      font-size: 2.5rem;
    }

    .back-home-btn {
      padding: 1rem 2rem;
    }
  }
</style>

<script>
  import gsap from 'gsap';

  function init404Animation() {
    const tl = gsap.timeline();

    tl.from('.not-found-code', {
      scale: 0,
      opacity: 0,
      duration: 0.8,
      ease: 'back.out(1.7)'
    });

    tl.from('.not-found-title', {
      y: 30,
      opacity: 0,
      duration: 0.5,
      ease: 'power2.out'
    }, '-=0.3');

    tl.from('.not-found-description', {
      y: 30,
      opacity: 0,
      duration: 0.5,
      ease: 'power2.out'
    }, '-=0.2');

    tl.from('.back-home-btn', {
      y: 20,
      opacity: 0,
      duration: 0.5,
      ease: 'power2.out'
    }, '-=0.2');
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init404Animation);
  } else {
    init404Animation();
  }

  document.addEventListener('astro:page-load', init404Animation);
</script>
