<Section title="Evidence" defaultOpen={false}>
  {/* Image Grid — use cols={2} or cols={3} */}
  <ImageGrid cols={2}>
    <Img src="images/awards/award-slug/evidence-1.png" caption="Caption 1" />
    <Img src="images/awards/award-slug/evidence-2.png" caption="Caption 2" />
  </ImageGrid>

  {/* Social Media Card — clickable link card */}
  <SocialMediaCard
    href="https://www.instagram.com/p/example"
    thumbnail="images/awards/award-slug/social-thumb.png"
    platform="Instagram"
    icon="images/contacts/instagram.svg"
    caption="Post description"
  />
</Section>

{/* ========================================================================= */}
{/* SECTION 8 — Impact & Outcomes                                             */}
{/* ========================================================================= */}

<Section title="Impact & Outcomes" defaultOpen={false}>
  <ul class="custom-list">
    <li>Impact item 1</li>
    <li>Impact item 2</li>
    <li>Impact item 3</li>
  </ul>
</Section>

